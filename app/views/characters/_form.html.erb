<%= form_for @character do |f| %>

<% if @character.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@character.errors.count, "error") %>
    prohibited
    this character from being saved:
  </h2>
  <ul>
    <% @character.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.select(:house_id,  House.all.collect {|house| [house.house_name, house.id]}) %>
</p>

<p>
  <%= f.label :photo_url %><br>
  <%= f.text_area :photo_url %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
