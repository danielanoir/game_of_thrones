<div class="content">
  <h1><%= link_to 'Houses', houses_path %> |
  <%= link_to 'Characters', characters_path %></h1>
<h3><%= link_to 'Create New House', new_house_path%></h3>


<table>
  <tr>
    <th>House</th>
    <th>Map</th>
    <th colspan="3"></th>
  </tr>

  <% @houses.each do |house| %>
  <tr>
    <td><%= house.house_name %></td>
    <td><%= house.map %></td>
    <td><%= link_to 'Show', house_path(house) %></td>
    <td><%= link_to 'Edit', edit_house_path(house) %></td>
    <td><%= link_to 'Destroy', house_path(house),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
